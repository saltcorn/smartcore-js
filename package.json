{
  "name": "@saltcorn/smartcore-js",
  "version": "0.2.10",
  "description": "Template project for writing node package with napi-rs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:saltcorn/smartcore-js.git"
  },
  "license": "MIT",
  "browser": "browser.js",
  "keywords": [
    "napi-rs",
    "NAPI",
    "N-API",
    "Rust",
    "node-addon",
    "node-addon-api"
  ],
  "files": [
    "dist",
    "dist-cjs",
    "core-bindings",
    "browser.js"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist-cjs/index.js"
    }
  },
  "napi": {
    "binaryName": "smartcore-js",
    "targets": [
      "x86_64-pc-windows-msvc",
      "x86_64-apple-darwin",
      "x86_64-unknown-linux-gnu",
      "x86_64-unknown-linux-musl",
      "aarch64-unknown-linux-gnu",
      "i686-pc-windows-msvc",
      "armv7-unknown-linux-gnueabihf",
      "aarch64-apple-darwin",
      "aarch64-linux-android",
      "x86_64-unknown-freebsd",
      "aarch64-unknown-linux-musl",
      "aarch64-pc-windows-msvc",
      "armv7-linux-androideabi",
      "wasm32-wasip1-threads"
    ]
  },
  "engines": {
    "node": ">= 6.14.2 < 7 || >= 8.11.2 < 9 || >= 9.11.0 < 10 || >= 10.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "bench": "node --import @oxc-node/core/register benchmark/bench.ts",
    "build": "napi build --platform --release --esm --output-dir ./src-js/core-bindings",
    "build:cjs": "napi build --platform --release --output-dir ./dist-cjs/core-bindings",
    "copy:bindings": "copyfiles -u 1 \"src-js/core-bindings/**/*\" dist/",
    "build:js:esm": "tsc -p ./tsconfig.json",
    "build:js:cjs": "tsc -p ./tsconfig.cjs.json && node scripts/create-cjs-package.js",
    "build:js": "yarn run build:js:esm && yarn run build:js:cjs && yarn run copy:bindings",
    "build:debug": "napi build --platform --esm --output-dir ./core-bindings",
    "format": "run-p format:prettier format:rs format:toml",
    "format:prettier": "prettier . -w",
    "format:toml": "taplo format",
    "format:rs": "cargo fmt",
    "lint": "oxlint .",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "tsx node_modules/mocha/bin/mocha.js",
    "version": "napi version",
    "prepare": "husky"
  },
  "devDependencies": {
    "@emnapi/core": "^1.4.5",
    "@emnapi/runtime": "^1.4.5",
    "@napi-rs/cli": "^3.2.0",
    "@oxc-node/core": "^0.0.32",
    "@taplo/cli": "^0.7.0",
    "@tybys/wasm-util": "^0.10.0",
    "@types/copyfiles": "^2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.1",
    "chalk": "^5.4.1",
    "copyfiles": "^2.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "mocha": "^11.7.2",
    "npm-run-all2": "^8.0.4",
    "oxlint": "^1.8.0",
    "prettier": "^3.6.2",
    "tinybench": "^5.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "oxlint --fix"
    ],
    "*.@(js|ts|tsx|yml|yaml|md|json)": [
      "prettier --write"
    ],
    "*.toml": [
      "taplo format"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "packageManager": "yarn@4.9.4"
}
