{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "preserveConstEnums": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "include": ["."],
  "exclude": ["node_modules", "bench", "test/**/*", "dist/**/*", "dist-cjs/**/*"]
}
