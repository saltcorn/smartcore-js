{
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "transpileOnly": true // Speeds up compilation
  },
  "include": ["."],
  "exclude": ["node_modules", "bench", "__test__"]
}
